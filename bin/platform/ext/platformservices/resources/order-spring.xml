	<!-- Currency -->

	<alias name="defaultRemoveCurrencyCheckOrdersInterceptor" alias="removeCurrencyCheckOrdersInterceptor"/>
	<bean id="defaultRemoveCurrencyCheckOrdersInterceptor"
