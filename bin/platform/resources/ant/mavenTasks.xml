					<echo message="testing maven dependencies : ${ext.@{extname}.path}/lib " />
					<if>
						<not>
							<available file="${ext.@{extname}.path}/lib/mavenJars"/>
						</not>
						<then>
							<mkdir dir="${ext.@{extname}.path}/lib/mavenJars"/>
						</then>
					</if>
