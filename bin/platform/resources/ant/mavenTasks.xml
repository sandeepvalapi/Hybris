					<not>
						<isset property="dist.deploy.file"/>
					</not>
					<not>
						<isset property="dist.deploy.artifactId"/>
					</not>
					<not>
						<isset property="dist.deploy.version"/>
					</not>
					<not>
						<isset property="dist.deploy.url"/>
