<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">
           
    <context:annotation-config/>

	<!-- Order Process Actions -->

	<bean id="abstractOrderAction" class="com.hybris.training.fulfilmentprocess.actions.order.AbstractOrderAction"  abstract="true" parent="abstractAction">
		<property name="timeService" ref="timeService"/>
	</bean>

	<bean id="checkOrderAction" class="com.hybris.training.fulfilmentprocess.actions.order.CheckOrderAction"  parent="abstractAction">
		<property name="checkOrderService" ref="checkOrderService"/>
	</bean>

	<bean id="cancelWholeOrderAuthorizationAction" class="com.hybris.training.fulfilmentprocess.actions.order.CancelWholeOrderAuthorizationAction"
            parent="abstractAction">
		<property name="paymentService" ref="paymentService"/>
    </bean>

	<bean id="sendOrderPlacedNotificationAction" class="com.hybris.training.fulfilmentprocess.actions.order.SendOrderPlacedNotificationAction"  parent="abstractAction">
		<property name="eventService" ref="eventService"/>
	</bean>

	<bean id="takePaymentAction" class="com.hybris.training.fulfilmentprocess.actions.order.TakePaymentAction"  parent="abstractAction">
		<property name="paymentService" ref="paymentService"/>
    </bean>

	<bean id="sendPaymentFailedNotificationAction" class="com.hybris.training.fulfilmentprocess.actions.order.SendPaymentFailedNotificationAction"  parent="abstractAction">
		<property name="eventService" ref="eventService"/>
	</bean>

	<bean id="checkTransactionReviewStatusAction" class="com.hybris.training.fulfilmentprocess.actions.order.CheckTransactionReviewStatusAction"  parent="abstractAction">
		<property name="ticketBusinessService" ref="ticketBusinessService"/>
	</bean>

	<bean id="fraudCheckOrderAction" class="com.hybris.training.fulfilmentprocess.actions.order.FraudCheckOrderAction"  parent="abstractOrderAction">
		<property name="fraudService" ref="fraudService"/>
		<property name="providerName" value="Mockup_3rdPartyProvider"/>
	</bean>

	<bean id="prepareOrderForManualCheckAction" class="com.hybris.training.fulfilmentprocess.actions.order.PrepareOrderForManualCheckAction"  parent="abstractAction">
		<property name="eventService" ref="eventService"/>
	</bean>

	<bean id="sendFraudErrorNotificationAction" class="com.hybris.training.fulfilmentprocess.actions.order.SendFraudErrorNotificationAction"  parent="abstractAction">
		<property name="eventService" ref="eventService"/>
	</bean>

	<bean id="checkAuthorizeOrderPaymentAction" class="com.hybris.training.fulfilmentprocess.actions.order.CheckAuthorizeOrderPaymentAction"  parent="abstractAction"/>

	<bean id="sendAuthorizationFailedNotificationAction" class="com.hybris.training.fulfilmentprocess.actions.order.SendAuthorizationFailedNotificationAction"  parent="abstractAction">
		<property name="eventService" ref="eventService"/>
	</bean>

	<bean id="reserveOrderAmountAction" class="com.hybris.training.fulfilmentprocess.actions.order.ReserveOrderAmountAction"  parent="abstractAction"/>

	<bean id="fraudCheckOrderInternalAction" class="com.hybris.training.fulfilmentprocess.actions.order.FraudCheckOrderInternalAction"  parent="abstractOrderAction">
		<property name="fraudService" ref="fraudService"/>
		<property name="providerName" value="hybris"/>
	</bean>

	<bean id="orderManualCheckedAction" class="com.hybris.training.fulfilmentprocess.actions.order.OrderManualCheckedAction"  parent="abstractOrderAction"/>

	<bean id="splitOrderAction" class="com.hybris.training.fulfilmentprocess.actions.order.SplitOrderAction"  parent="abstractAction">
		<property name="orderSplittingService" ref="orderSplittingService"/>
		<property name="businessProcessService" ref="businessProcessService"/>
	</bean>

	<bean id="subprocessesCompletedAction" class="com.hybris.training.fulfilmentprocess.actions.order.SubprocessesCompletedAction"  parent="abstractAction"/>

	<bean id="setOrderExpirationTimeAction" class="com.hybris.training.fulfilmentprocess.actions.order.SetOrderExpirationTimeAction"  parent="abstractAction">
		<property name="timeService" ref="timeService"/>
	</bean>
	
	<bean id="sendOrderCompletedNotificationAction" class="com.hybris.training.fulfilmentprocess.actions.order.SendOrderCompletedNotificationAction"  parent="abstractAction">
		<property name="eventService" ref="eventService"/>
	</bean>

	<bean id="scheduleForCleanUpAction" class="com.hybris.training.fulfilmentprocess.actions.order.ScheduleForCleanUpAction"  parent="abstractAction">
		<property name="timeService" ref="timeService"/>
	</bean>

	<bean id="notifyCustomerAboutFraudAction" class="com.hybris.training.fulfilmentprocess.actions.order.NotifyCustomerAboutFraudAction"  parent="abstractAction">
		<property name="eventService" ref="eventService"/>
	</bean>


</beans>
